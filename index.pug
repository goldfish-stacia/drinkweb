mixin nav-a(link, img, textZH, textEN)
    a(href=link)
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN

mixin title(img, textZH, textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN

mixin location(nameZH, nameEN, img )
    div(class="location")
        div(class="location_title")
            div(class="location_name")
                span=nameZH
                br
                span=nameEN
            img(src="img/location.png", alt="連結縮圖")
        img(src="img/" + img + ".png", alt="地點圖片")


